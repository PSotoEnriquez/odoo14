<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="ocio.list">
      <field name="name">ocio list</field>
      <field name="model">ocio.municipio</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nombre"/>
          <field name="cod_prov"/>
          <field name="cod_mun"/>
          <field name="cod_postal"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="ocio.form">
      <field name="name">ocio form</field>
      <field name="model">ocio.municipio</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="nombre"/>
            <field name="cod_prov"/>
            <field name="cod_mun"/>
            <field name="cod_postal"/>
          </group>
        </form>
      </field>
    </record>



    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="ocio.municipio_action_window">
      <field name="name">Municipio window</field>
      <field name="res_model">ocio.municipio</field>
      <field name="view_mode">tree,form</field>
    </record>


